<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#E6E6E6"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

		<TextView
            android:id="@+id/textheart_rate_measure"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="#ff50a5a5"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/heart_rate_measurement"
            android:textColor="#ffffff"
            android:textSize="24sp" >
        
        </TextView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="168dp"
            android:orientation="vertical">

            <com.smartcare.healthapp.heartrate.HeartbeatView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </com.smartcare.healthapp.heartrate.HeartbeatView>
        </LinearLayout>

            <TextView
                android:id="@+id/text"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="@string/measuring"
                android:textColor="#615c5c"
                android:textSize="28sp" >
            </TextView>
    </LinearLayout>

    <SurfaceView
        android:id="@+id/preview"
        android:layout_width="1dp"
        android:layout_height="1dp" >
    </SurfaceView>

	    <ImageView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:src="@drawable/help2" />

</LinearLayout>